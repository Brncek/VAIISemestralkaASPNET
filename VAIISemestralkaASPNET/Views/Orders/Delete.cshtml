@model VAIISemestralkaASPNET.Models.Order

@{
    ViewData["Title"] = "Delete order";
}

<link href="/css/form.css" rel="stylesheet">
<link href="~/css/delete.css" rel="stylesheet" />

<div class="form-container">
    <hr />
    <div class ="d-flex register-form">
        <ul>
            <h3>Are you sure you want to delete this order?</h3>
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Model.Date.ToString("dd.MM.yyyy HH:mm");
                </dd>

                @if (Model.Car != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Car.Name)
                    </dd>
                }

                <dt class="col-sm-2">

                    @Html.DisplayNameFor(model => model.VIN)

                </dt>
                <dd class="col-sm-10">
                    @if (Model.Car != null)
                    {
                        @Model.Car.VIN

                    }
                    else
                    {
                        @Model.VIN

                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="w-100 btn btn-lg btn-danger" />
            </form>

        </ul>
    </div>
</div>
