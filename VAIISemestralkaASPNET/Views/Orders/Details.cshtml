@model VAIISemestralkaASPNET.Models.Order

@{
    ViewData["Title"] = "Order details";
}

<link href="~/css/form.css" rel="stylesheet" />
<link href="~/css/details.css" rel="stylesheet" />

    <div class="container">
        <h3>Details</h3>
        <hr />
        <dl class="row">
            <div class ="register-form">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Model.Date.ToString("dd.MM.yyyy HH:mm")
                </dd>
            </div>

            @if (Model.Car != null)
            {
                <div class="register-form">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Car.Name)
                    </dd>
                </div>
            }

            <div class ="register-form">
                <dt class="col-sm-2">

                    @Html.DisplayNameFor(model => model.VIN)

                </dt>
                <dd class="col-sm-10">
                    @if (Model.Car != null)
                    {
                        @Model.Car.VIN
                    }
                    else
                    {
                        @Model.VIN
                    }
                </dd>
            </div>

            <div class ="register-form">
                <dt class="col-sm-2">
                    Servise info
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ServiseInfo)
                </dd>
            </div>

            <div class ="register-form">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State)
                </dd>
            </div>

            @if(!User.IsInRole("User"))
            {
                <div class="register-form">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.User.UserName)
                    </dd>
                </div>
            }
            
        </dl>
    </div>
