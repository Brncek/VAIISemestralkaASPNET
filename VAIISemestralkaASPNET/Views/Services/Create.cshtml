@model VAIISemestralkaASPNET.Models.Service

@{
    ViewData["Title"] = "Create Service";
    //TODO: CSS
}

<link href="/css/form.css" rel="stylesheet">


<div class="form-container">
    <form asp-action="Create" enctype="multipart/form-data" class="d-flex register-form">
        <hr />
        <ul>
            <h4>Service</h4>

            <input type="hidden" name="OrderId" value="@ViewBag.OrderID" />

            <div class="form-floating mb-3">
                <input asp-for="StartDate" class="form-control" type="datetime-local" />
                <label asp-for="StartDate" class="control-label" required></label>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="EndtDate" class="form-control" type="datetime-local" />
                <label asp-for="EndtDate" class="control-label" required></label>
                <span asp-validation-for="EndtDate" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <label asp-for="WorkTime" class="control-label"></label>
                <input asp-for="WorkTime" class="form-control" required />
                <span asp-validation-for="WorkTime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="ServisesDone" class="form-control" required></textarea>
                <label asp-for="ServisesDone" class="control-label"></label>
                <span asp-validation-for="ServisesDone" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="file" name="uploadedFiles" multiple class="form-control" />
                <label>Upload Images</label>

            </div>

            <div class="form-group">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
            </div>
        </ul>
    </form>
</div>



