@model VAIISemestralkaASPNET.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<link href="/css/form.css" rel="stylesheet">
<link href="~/css/delete.css" rel="stylesheet" />


<div class ="form-container">
    <hr />
    <div class="d-flex register-form">
        <ul>
            <h3>Are you sure you want to delete this service?</h3>
            <dl>
                <dt class="col-sm-2">Start Date</dt>
                <dd class="col-sm-10">@Model.StartDate</dd>

                <dt class="col-sm-2">End Date</dt>
                <dd class="col-sm-10">@Model.EndtDate</dd>

                <dt class="col-sm-2">Work Time</dt>
                <dd class="col-sm-10">@Model.WorkTime</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="w-100 btn btn-lg btn-danger">Delete</button>
            </form>
        </ul>
    </div>
    
</div>