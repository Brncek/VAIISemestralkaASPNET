<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VAIISemestralka</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <script src="/lib/mineBootstrap/js/bootstrap.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" href="~/css/font.css" asp-append-version="true" />

    <link href="/css/common.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="/res/LogoServis.png" alt="Logo"></a>
                <div class="navbar-toggler-custom">
                    <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon-custom"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Reservations" asp-action="Index">Reservations</a>
                            </li>

                                <li class="nav-item ">
                                    <a class="nav-link navWhiteText" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                                </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Garage" asp-action="Index">Garage</a>
                            </li>

                        } else if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Garage" asp-action="Index">Cars</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="" asp-action="Index">Services</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Reservations" asp-action="ClosedDates">Opening Hours</a>
                            </li>
                        } else if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Garage" asp-action="Index">Cars</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Admin" asp-action="Index">Users</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="" asp-action="Index">Services</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Reservations" asp-action="ClosedDates">Opening Hours</a>
                            </li>
                        } else if (User.IsInRole("Mechanic"))
                        {
                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Garage" asp-action="Index">Cars</a>
                            </li>

                            <li class="nav-item ">
                                    <a class="nav-link navWhiteText" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="" asp-action="Index">Services</a>
                            </li>
                        } else
                        {
                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                            </li>

                            <li class="nav-item ">
                                <a class="nav-link navWhiteText" asp-area="" asp-controller="Reservations" asp-action="Index" >Reservations</a>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />

                   
                </div>
            </div>
        </nav>


    </header>


    <div>
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <p class="copyright">© 2024 Sakala Benjamin in Zilina</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
