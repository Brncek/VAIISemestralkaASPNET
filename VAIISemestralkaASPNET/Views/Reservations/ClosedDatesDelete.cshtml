@model VAIISemestralkaASPNET.Models.ClosedDate

@{
    ViewData["Title"] = "Closed date delete";
}

<link href="/css/form.css" rel="stylesheet">
<link href="~/css/delete.css" rel="stylesheet" />


<div class="form-container">
    <hr />
    <div  class ="d-flex register-form">
        <ul>
            <h3>Are you sure you want to delete this?</h3>
            <dl>
                <dt class = "col-sm-2">
                    Date: 
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Closed)
                </dd>
            </dl>

            <form asp-action="ClosedDatesDelete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="w-100 btn btn-lg btn-danger" />
            </form>
        </ul>
    </div>
</div>
