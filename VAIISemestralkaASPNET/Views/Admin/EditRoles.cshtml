@using Microsoft.AspNetCore.Identity
@model (IdentityUser User, IList<string> UserRoles, List<string> AllRoles)


<h2>Edit Roles for @Model.User.Email</h2>

<form asp-action="UpdateRoles" method="post">
    <input type="hidden" name="userId" value="@Model.User.Id" />
    @foreach (var role in Model.AllRoles)
    {
        <div>
            <input type="checkbox" name="roles" value="@role" @(Model.UserRoles.Contains(role) ? "checked" : "") />
            <label>@role</label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Save</button>
</form>
